{
  "name": "@matejbransky/react-lib",
  "version": "0.0.0-development",
  "author": "Matej Bransky",
  "license": "MIT",
  "source": "./src/index.tsx",
  "main": "./dist/react-lib.umd.js",
  "module": "./dist/react-lib.es.js",
  "exports": {
    "import": "./dist/react-lib.es.js",
    "require": "./dist/react-lib.umd.js"
  },
  "types": "./src/index.tsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/MatejBransky/react-lib.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "src",
    "dist"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "scripts": {
    "commit": "git-cz",
    "dev": "vite demo",
    "build:demo": "tsc & vite build demo",
    "serve:demo": "vite preview demo",
    "build": "tsc && vite build",
    "check-format": "prettier --check .",
    "format": "prettier --check --write .",
    "lint": "eslint .",
    "types": "tsc",
    "test": "jest",
    "prepack": "yarn build",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.6",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.37",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@utilize/eslint-config": "1.1.9",
    "@utilize/prettier-config": "1.0.4",
    "@vitejs/plugin-react-refresh": "1.3.2",
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.11.10",
    "esbuild-jest": "0.5.0",
    "eslint": "7.24.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "semantic-release": "17.4.2",
    "typescript": "4.2.4",
    "vite": "2.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "eslintConfig": {
    "extends": "@utilize/eslint-config"
  },
  "prettier": "@utilize/prettier-config"
}
